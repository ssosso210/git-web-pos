<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<properties>
		<property name="driver" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/dobbypos" />
		<property name="username" value="devadmin" />
		<property name="password" value="mysql" />
	</properties>
	
	<typeAliases>
		<typeAlias type="com.mvcdemoweb.model.dto.Member" alias="Member"/>
		<typeAlias type="com.mvcdemoweb.model.dto.Upload" alias="Upload"/>
		<typeAlias type="com.mvcdemoweb.model.dto.UploadFile" alias="UploadFile"/>
		
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="devadmin" />
				<property name="password" value="mysql" />
			</dataSource>
			
		</environment>
	</environments>
	

	<mappers>
	<!-- Code에서 분리된 SQL문이 작성되고 객체와의 매핑 장보가 정의되는 파일들  -->
		<mapper resource="com/mvcdemoweb/model/mapper/mysqlmapper/MemberMapper.xml" />
		<!-- <mapper resource="com/mvcdemoweb/model/mapper/UploadMapper.xml" /> -->
		<!-- <mapper resource="com/demoweb/model/mapper/BoardMapper.xml" /> -->
	</mappers>

</configuration>